[user]
	name = {{git.username}}
	email = {{git.email}}
	{{#if git.doCommitSigning}}
	signingkey = {{git.gpgkey}}
	{{/if}}

[init]
	defaultBranch = main
	
[core]
    pager = delta

[interactive]
    diffFilter = delta 
	
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true
    light = false
    line-numbers = true
    line-numbers-left-format = "{nm:>4} â”‚"
    colorMoved = default                
                                        
[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
