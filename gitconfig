[user]
	name = {{git.username}}
	email = {{git.email}}

[alias]
	exec = "!exec "
	root = rev-parse --show-toplevel
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    cdiff = diff --cached
    
[advice]
    addEmptyPathspec = false

[init]
	defaultBranch = main
	
[core]
    pager = delta
	
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true
    light = false
    line-numbers = true
    line-numbers-left-format = "{nm:>4} â”‚"
    colorMoved = default                
                                        
[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
    
